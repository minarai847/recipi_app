<div class="card">
  <%= link_to image_tag(recipe.image , class: :card__img ), recipe_path(recipe), method: :get%>
  <div class="card__body">
    <%= link_to recipe.title, recipe_path(recipe.id), class: :card__title%>
    
    <%= link_to "by #{recipe.user.name}", "/users/#{recipe.user.id}", class: :card__user %>
    <% if user_signed_in?%>
    <% if current_user.already_gooded?(recipe)%>
    <%= link_to recipe_goods_path(recipe),method: :delete do%>
    <i class="fas fa-heart"></i>
    <% end %>
    <% else%>
    <%= link_to recipe_goods_path(recipe), method: :create do %>
    <i class="far fa-heart"></i>
    <% end %>
    <% end %>

    <%= recipe.goods.count%>
    <% end %>
  </div>
</div>